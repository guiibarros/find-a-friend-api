// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Age {
  PUPPY
  ADOLESCENT
  ADULT
  SENIOR
}

enum Size {
  SMALL
  MEDIUM
  LARGE
}

enum Rate {
  LOW
  MEDIUM
  HIGH
}

model Pet {
  id         String    @id @default(uuid())
  name       String
  about      String
  adopted_at DateTime?

  age          Age
  size         Size
  energy       Rate
  independency Rate
  environment  Size

  imagesUrl    String[]
  requirements String[]

  orgId String
  org   Org    @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("pets")
}

model Org {
  id            String @id @default(uuid())
  title         String
  phone         String @unique
  password_hash String

  cep     String
  address String
  uf      String
  city    String

  pets Pet[]

  @@map("orgs")
}
